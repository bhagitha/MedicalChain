      <h1 align="center">
        <font color="#f8f8ff"><b>Registration</b></font>
      </h1>
      <form action="/register" method="POST">

        <div class="col-sm-4 col-sm-offset-4">
          <div class="inputContainer">
            <label>Type</label>
            <select id="actor" name="sel_type" class="form-control" required>
              <option value="">Select a type</option>

              <option value=1>Patient</option>
              <option value=2>Doctor</option>
              <option value=3>Paramedical</option>

            </select>
            <br>

          </div>
        </div>

        <div class="col-sm-4 col-sm-offset-4">
          <div class="inputContainer">
            <label>Name</label>
            <input type="text" name="name" id="name" value="" class="form-control" placeholder="Name:"
              required="required" /><br>
          </div>
        </div>

        <div class="col-sm-4 col-sm-offset-4">
          <div class="inputContainer">
            <label>Address</label>
            <textarea name="address" id="address" cols="21" rows="5" value="" class="form-control"
              placeholder="Address:" required="required"></textarea>
            <br>

          </div>
        </div>
        <div class="col-sm-4 col-sm-offset-4">
          <div class="inputContainer">
            <label>Age</label>
            <input type="number" name="age" id="age" min="1" class="form-control" placeholder="Age:"
              required="required" />
            <br>

          </div>
        </div>

        <div class="col-sm-4 col-sm-offset-4">
          <div class="inputContainer">
            <label>Gender</label>
            <select id="gender" name="gender" class="form-control" required>
              <option value="">Select a type</option>

              <option value=1>Male</option>
              <option value=2>Female</option>
            </select>
            <br>

          </div>
        </div>

        <div class="col-sm-4 col-sm-offset-4">
          <div class="inputContainer">
            <label>Mobile</label>
            <input type="number" name="mobile" id="mobile" value="" class="form-control" placeholder="Mobile Number:"
              required="required" />
            <br>

          </div>
        </div>

        <div class="col-sm-4 col-sm-offset-4">
          <div class="inputContainer">
            <label>Password</label>
            <input type="password" name="password" id="password" value="" class="form-control" placeholder="Password:"
              required="required" />
            <br>
          </div>
        </div>

        <div class="col-sm-2 col-sm-offset-5">
          <button id="login" type="submit" class="btn-lg"
            style="font-size:20px;width: 90%">Register</button><br>
        </div>

