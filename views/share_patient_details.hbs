        <h1 align="center"><font color="#f8f8ff"><b>Send Patient Details</b></font></h1>
        <br>
        <br>
        <br>
        <form  method="post">

            <div class="col-sm-4 col-sm-offset-4">
                <div class="inputContainer">
                    <label>Hospital</label>
                     <select id="hospital" name="hospital" class="form-control" required>
                         <option value="">Select a hospital</option>

                         <option value="1">Baby Memorilal</option>
                         <option value="2">MIMS</option>
                         <option value="3">National</option>
                         <option value="4">KMCT</option>

                     </select>
                    <br>

                </div>
            </div>
            <div class="col-sm-4 col-sm-offset-4">
                <div class="inputContainer">
                    <label>Doctor</label>
                     <select id="doctor" name="doctor" class="form-control" required>
                         <option value="">Select a doctor</option>

                         <option value="1">Dr Ram</option>
                         <option value="2">Dr Haris</option>
                         <option value="3">Dr Vinoy</option>

                     </select>
                    <br>

                </div>
            </div>

            <div class="col-sm-4 col-sm-offset-4">
                <div class="inputContainer">
                    <label>Patient Details</label>
                    <input type="file" name="p_details" id="p_details" class="form-control" />
                    <br>
                </div>
            </div>

            <div class="col-sm-2 col-sm-offset-5">
                <button id="send" name="send" type="submit" class="btn-lg" style="font-size:20px;width: 90%"  onclick="return val();">Send >></button><br>
            </div>
