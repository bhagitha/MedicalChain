    <script type="text/javascript">
    function val()
    {
         if(document.getElementById("hospital").value=="")
        {
            alert("please select a hospital");
            document.getElementById("hospital").focus();
            return false;
        }
       
        if(document.getElementById("doctor").value=="")
        {
            alert("please select a doctor");
            document.getElementById("doctor").focus();
            return false;
        }
         if(document.getElementById("p_details").value=="")
        {
            alert("please choose a file");
            document.getElementById("p_details").focus();
            return false;
        }
        
        
            alert("successfully registered");
        
    }
</script>
